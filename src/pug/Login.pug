doctype html
html(lang="ja")
    head
        include _temp_p_head
        title Login
        link(rel="stylesheet", href="css/Login.css")
    body
        section
            .back-btn
                a(href="Welcome.html").fa-solid.fa-angle-left
        section
            h1.main-txt Welcome!
